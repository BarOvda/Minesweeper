            <!-- Hard Player's Name -->
            <TextView
                android:id="@+id/hard_second_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <!-- Hard Player's Time -->
            <TextView
                android:id="@+id/hard_second_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </TableRow>

        <!-- Hard Third Score -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">
            <!-- Hard Score Number-->
            <TextView
                android:id="@+id/hard_third_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/third_score" />
            <!-- Hard Player's Name -->
            <TextView
                android:id="@+id/hard_third_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <!-- Hard Player's Time -->
            <TextView
