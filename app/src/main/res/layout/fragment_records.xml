                android:gravity="center"/>
            <!-- Extreme Player's Time -->
            <TextView
                android:id="@+id/extreme_third_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</FrameLayout>