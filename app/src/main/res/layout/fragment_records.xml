        </TableRow>

        <!-- Extreme Third Score -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">
            <!-- Extreme Score Number-->
            <TextView
                android:id="@+id/extreme_third_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/third_score" />
            <!-- Extreme Player's Name -->
            <TextView
                android:id="@+id/extreme_third_name"
                android:layout_width="match_parent"
