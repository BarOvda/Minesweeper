                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </TableRow>


        <!-- Extreme Scores Header -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/extreme_records"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_weight="3"
                android:gravity="center"/>
        </TableRow>

        <!-- Extreme First Score -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">
            <!-- Extreme Score Number-->
            <TextView
                android:id="@+id/extreme_first_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/first_score" />
            <!-- Extreme Player's Name -->
            <TextView
                android:id="@+id/extreme_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <!-- Extreme Player's Time -->
            <TextView
                android:id="@+id/extreme_first_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </TableRow>

        <!-- Extreme Second Score -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">
            <!-- Extreme Score Number-->
            <TextView
                android:id="@+id/extreme_second_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/second_score" />
            <!-- Extreme Player's Name -->
            <TextView
                android:id="@+id/extreme_second_name"
                android:layout_width="match_parent"
